{
  "name": "zorro-chain",
  "version": "1.0.0",
  "author": "zorro-project",
  "license": "MIT",
  "scripts": {
    "starknet-devnet": "poetry run starknet-devnet",
    "watch": "(cd contracts/starknet && find . -name '*.cairo' | entr poetry run starknet-compile zorro.cairo)",
    "test:build-cache": "(cd contracts/starknet && poetry run pytest --cache-clear -s -W ignore::DeprecationWarning ../../test/starknet/build_cache.py)",
    "test:use-cache": "(cd contracts/starknet && poetry run pytest -n auto -s -W ignore::DeprecationWarning ../../test/starknet/test.py)",
    "test": "yarn test:build-cache && yarn test:use-cache",
    "compile": "hardhat starknet-compile && hardhat compile",
    "deploy": "env CHAIN_DEPLOYMENT=development DEV_MODE=1 hardhat run ./scripts/deploy.ts --network goerli --no-compile",
    "deploy:production": "env CHAIN_DEPLOYMENT=production hardhat run ./scripts/deploy.ts --network goerli --no-compile",
    "generate-insecure-keypair": "ts-node scripts/generate-insecure-keypair.ts"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^2.1.3",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@shardlabs/starknet-hardhat-plugin": "^0.3.10",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.3.0",
    "@types/chai": "^4.2.21",
    "@types/lodash": "^4.14.178",
    "@types/mocha": "^9.0.0",
    "@types/node": "^12.0.0",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "chai": "^4.2.0",
    "dotenv": "^10.0.0",
    "dotenv-defaults": "^5.0.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.0.0",
    "hardhat": "^2.8.3",
    "hardhat-gas-reporter": "^1.0.4",
    "lodash": "^4.17.21",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.16",
    "starknet": "^2.5.0",
    "ts-node": "^10.1.0",
    "typechain": "^5.1.2",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "@kleros/dispute-resolver-interface-contract": "^8.0.0"
  }
}
